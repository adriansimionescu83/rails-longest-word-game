<h1>New game</h1>
<% @letters.each do |item| %>
  <li class="blue-card"><%= item %></li>
<% end %>

<form action="/score" method="post">
  <label for="word">What is the longest word you can find?</label><br>
  <input type="text" id="answer" name="word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
